<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Working times" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t('activerecord.model.working_time') %></h1>
  </div>
  <div id="search-results" class="min-h-8"></div>
  <%= form_with scope: :search, url: search_url, method: :post, class: "grid grid-cols-5 gap-2 mb-8" do |form| %>
    <div class="form-item col-span-2">
      <%= form.label t('search.start_date') %>
      <%= form.date_field :start_date %>
    </div>
    <div class="form-item col-span-2">
      <%= form.label t('search.end_date') %>
      <%= form.date_field :end_date %>
    </div>
    <div class="form-item col-span-1">
      <%= form.submit value: t("searching"), class:"button button-primary button-normal" %>
    </div>
  <% end %>
  <%= month_calendar(events: @working_times) do |date| %>
    <%= date %>
  <% end %>
</div>
