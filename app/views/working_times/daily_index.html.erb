<%= render partial: 'simple_calendar/calendar_header', locals: { title: t('daily', day: @day), time: @day, center: t('date.day_names')[@day.wday],
                                                                 previous_path: daily_index_working_times_path(day: @day.to_date - 1.days),
                                                                 next_path:   daily_index_working_times_path(day: @day.to_date + 1.days)  } %>
<%= render partial: "working_times/total_sum", locals: { events: @working_times } %>
<div class="grid grid-cols-3 min-h-[75vh] p-4 <%= "bg-pastel-red/20" if is_holiday?(@day) || @day.wday.zero? %>">
  <div class="col-span-1 shadow-primary p-4">
    <%= render partial: "working_times/events", locals: { events: @working_times, classes:"grid grid-cols-4 gap-4" } %>
  </div>
  <div class="col-span-1">
    <div class="m-4">
      <%= is_holiday?(@day) ? holiday_name(@day) : "-" %>
    </div>
  </div>
  <div class="col-span-1">
    <%= link_to t("new"), new_working_time_path(date: @day), class: "button button-primary button-full mt-4" %>
  </div>
</div>
<%= link_to t("back"), working_times_path, class: "button button-secondary button-normal" %>

